pipeline {
    agent any
    triggers { 
        pollSCM('*/1 * * * *') 
    }
    stages {
        stage('build') {
            steps {
                echo "building node application.."
            }
        }
        stage('deploy-dev') {
            steps {
                deploy("DEV")
            }
        }
        stage('test-dev') {
            steps {
                echo "Testing on DEV.."
            }
        }
        stage('deploy-int') {
            steps {
                 deploy("INT")
            }
        }
        stage('test-int') {
            steps {
                echo "Testing on INT.."
            }
        }
        stage('deploy-prd') {
            steps {
                 deploy("PRD")
            }
        }
        stage('test-prd') {
            steps {
                echo "Testing on PRD.."
            }
        }
    }
}

def deploy(String environment) {
     echo "Deployment on ${environment} environment triggered.."
     build job: "UI tests", parameters: [string(name: "ENVIRONMENT", value:"${environment}")]
}
